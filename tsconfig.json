{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "types": [
      "node",
      "@cloudflare/workers-types"
    ],
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}